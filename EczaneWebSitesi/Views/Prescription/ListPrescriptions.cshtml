@using EczaneWebSitesi.Models
@model List<Prescription>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <title>Reçeteleri Listele</title>
</head>
<body>
   <table class="table table-bordered">
       <thead>
           <tr>
               <th>Müşteri Adı</th>
               <th>Doktor Adı</th>
               <th>Reçete Tarihi</th>
               <th>İlaçların ID</th>
               <th>Reçeteyi Sil</th>
           </tr>
       </thead>

       <tbody>
           @foreach (var recete in Model)
           {
               <tr>
                   <td>@recete.Customer.FirstName @recete.Customer.LastName</td>
                   <td>@recete.DoctorName</td>
                   <td>@recete.PrescriptionDate.ToShortDateString()</td>
                   <td>
                       @foreach (var ilac_adları in recete.DrugNames)
                       {
                           <span>@ilac_adları , </span>
                       }
                   </td>

                   <td>
                       <a href="/Prescription/DeletePrescription?id=@recete.PrescriptionID" class="btn btn-danger">Sil</a>
                   </td>
                   
               </tr>
           }
       </tbody>
   </table>
</body>
</html>
