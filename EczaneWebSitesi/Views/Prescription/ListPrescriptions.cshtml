@using EczaneWebSitesi.Models
@model List<Prescription>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <title>Reçeteleri Listele</title>
</head>
<body>
   <table class="table table-bordered">
       <thead>
           <tr>
               <th>Müşteri ID</th>
               <th>Doktor Adı</th>
               <th>Reçete Tarihi</th>
               <th>İlaçların ID</th>
           </tr>
       </thead>

       <tbody>
           @foreach (var recete in Model)
           {
               <tr>
                   <td>@recete.CustomerID</td>
                   <td>@recete.DoctorName</td>
                   <td>@recete.PrescriptionDate.ToShortDateString()</td>
                   <td>@recete.DrugsID</td>
               </tr>
           }
       </tbody>
   </table>
</body>
</html>
